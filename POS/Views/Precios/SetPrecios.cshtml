@model DataLayer.ViewModels.ProductoPrecioInfoViewModel

@{
    ViewBag.Title = "Asignar Precios";
}
<div class="container-fluid">
    <br />

    <div class="box box-warning">
        <div class="box-header with-border">
            <h3 class="box-title">Asignar Otros Precioas al Producto</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        @using (Html.BeginForm("SetPrecios", "Precios"))
        {
            @Html.AntiForgeryToken()
        <div class="box-body">
            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ProductoId)


                <label for="Nombre" class="col-sm-2 control-label">Producto</label>

                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @readonly="readonly"} })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <label for="IdMarca" class="col-sm-2 control-label">Precio Base</label>

                <div class="col-sm-10">
                    @Html.EditorFor(model => model.PrecioBase, new { htmlAttributes = new { @class = "form-control", @type = "number", @onkeypress = "return isNumber(event)" } })
                    @Html.ValidationMessageFor(model => model.PrecioBase, "", new { @class = "text-danger" })
                </div>

            </div>
            <br />
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Precio1" class="col-sm-4 control-label">Precio #1</label>

                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Precio1, new { htmlAttributes = new { @class = "form-control", @type = "number", @onkeypress = "return isNumber(event)" } })
                            @Html.ValidationMessageFor(model => model.Precio1, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Precio2" class="col-sm-4 control-label">Precio #2</label>

                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Precio2, new { htmlAttributes = new { @class = "form-control", @type = "number", @onkeypress = "return isNumber(event)" } })
                            @Html.ValidationMessageFor(model => model.Precio2, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Precio3" class="col-sm-4 control-label">Precio #3</label>

                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Precio3, new { htmlAttributes = new { @class = "form-control", @type = "number", @onkeypress = "return isNumber(event)" } })
                            @Html.ValidationMessageFor(model => model.Precio3, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
            </div>
            
            
            


        </div>
            <!-- /.box-body -->
            <div class="box-footer">
                @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-info pull-right">Asignar</button>
            </div>
        }
        <!-- /.box-footer -->

    </div>

    <div>

    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/Proyecto/GeneralFunctions.js"></script>
}
