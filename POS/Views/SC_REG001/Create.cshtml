@model DataLayer.Models.SC_REG001

@{
    ViewBag.Title = "Create";
}
<div class="container-fluid">
    <br />
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Crear Región</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="container-fluid">
            <br />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#Region" data-toggle="tab">Datos de la Región</a></li>

                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="Region">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CODIGO_REG, "País", htmlAttributes: new { @class = "control-label col-md-2" })

                                        @Html.DropDownList("CODIGO_PAIS", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CODIGO_PAIS, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">

                                    @Html.LabelFor(model => model.NOMBRE_REG, htmlAttributes: new { @class = "control-label col-md-2" })

                                    @Html.EditorFor(model => model.NOMBRE_REG, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NOMBRE_REG, "", new { @class = "text-danger" })
                                </div>


                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="box-footer">
                                @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                                <button type="submit" class="btn btn-success pull-right">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
