@model IEnumerable<DataLayer.Models.CuentasPorCobrar>



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="box-title">Listado de las CXC</h3>

                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                            <div class="col-sm-12">
                                <table id="tbCxC" class="table table-bordered table-striped table-responsive table-hover">

                                    <tr>
                                        <th>
                                            Cliente
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Facturacion.NoFactura)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MontoTotal)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MontoInicial)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MontoPendiente)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FechaUltimoPago)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FechaLimite)
                                        </th>
                                        <th>
                                            Pagada ?
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FechaCreacion)
                                        </th>

                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Facturacion.Cliente.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Facturacion.NoFactura)
                                            </td>
                                            <td>
                                                @{
                                                    var monto = item.MontoTotal;

                                                }
                                                @String.Format("{0:C}", monto)
                                            </td>
                                            <td>
                                                @{
                                                    var montoInicial = item.MontoInicial;
                                                }
                                                @String.Format("{0:c}", montoInicial)
                                            </td>
                                            <td>
                                                @{
                                                    var montoPend = item.MontoPendiente;
                                                }
                                                @String.Format("{0:C}", montoPend)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaUltimoPago)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaLimite)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsPaid)
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                                            <td>
                                                @{
                                                    if (item.IsPaid)
                                                    {
                                                        @Html.ActionLink("Pagado", "HacerPagosaCuenta", new { id = item.FacturacionId }, htmlAttributes: new { @class = "btn btn-info" })

                                                    }
                                                    else
                                                    { @Html.ActionLink("Abonar", "HacerPagosaCuenta", new { id = item.FacturacionId }, htmlAttributes: new { @class = "btn btn-primary" })

                                                }
                                                }

                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
