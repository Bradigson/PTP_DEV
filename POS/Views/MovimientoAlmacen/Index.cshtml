@model IEnumerable<DataLayer.Models.MovimientoAlmacen>



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="box-title">Listado de los Movimientos al Inventario</h3>
                            <p style="float:right">
                                @Html.ActionLink(" Nuevo", "CrearMovimiento", null, htmlAttributes: new { @class = "btn btn-primary glyphicon glyphicon-plus" })
                            </p>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                            <div class="col-sm-12">
                                <table id="tbMovimiento" class="table table-bordered table-striped table-responsive table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                Almacen
                                            </th>

                                            <th>
                                                Movimiento
                                            </th>
                                            <th>
                                                Pago
                                            </th>
                                            <th>
                                                Suplidor
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.NoFactura)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Ncf)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CantidadProducto)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.TotalFacturado)
                                            </th>


                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Almacen.Nombre)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TipoMovimiento.Nombre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TipoPago.Name)
                                                </td>
                                                <td>

                                                    @item.Suplidor.Nombre
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NoFactura)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Ncf)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CantidadProducto)
                                                </td>
                                                <td>
                                                    @String.Format("{0:C}", item.TotalFacturado)

                                                </td>


                                                <td>
                                                   
                                                       @Html.ActionLink(" Desglose", "DetalleMovimiento", new { idMovimiento = item.Id }, htmlAttributes: new { @class = "btn btn-info" })
              
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>

                                            </th>

                                            <th>

                                            </th>
                                            <th>

                                            </th>
                                            <th>

                                            </th>
                                            <th>

                                            </th>
                                            <th>

                                            </th>
                                            <th>

                                            </th>
                                            <th>

                                            </th>


                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>


                            </div>

                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        </div>
</section>





 