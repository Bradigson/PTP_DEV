                    <dt>
                        @Html.DisplayNameFor(model => model.FechaFin)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FechaFin)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TipoDescuento)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TipoDescuento)
                    </dd>

