@model IEnumerable<DataLayer.Models.SC_EMP001>





<section class="content">
    <div class="row">
        <div class="col-md-12">

            <div class="box box-pane-right">

                <div class="box-body">


                    <div class="col-md-offset-8 col-md-4">

                        <div class="col-lg-12 col-xs-12">
                            <!-- small box -->
                            <a href="@Url.Action("Create","SC_EMP001")">
                                <div class="small-box bg-light-blue">

                                    <div class="inner">
                                        <h3>@Model.Count()</h3>

                                        <p>Empresas Registradas</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion icon-add"> </i>
                                    </div>

                                </div>
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box box-pane-right">

                    <div class="box-header with-border"> <h3 class="box-title">Listado de Empresas</h3> </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row">

                                <div class="col-sm-6"></div><div class="col-sm-6"></div>
                            </div><div class="row">
                                <div class="  col-xs-12 col-md-12 col-sm-12">
                                    <table id="tbEmpresa" class="table table-bordered table-striped table-hover table-responsive">
                                        <thead>
                                            <tr>
                                                <th class="hidden-xs hidden-sm">
                                                    @Html.DisplayName("Imagen")
                                                </th>
                                                <th scope="col">
                                                    @Html.DisplayName("Codigo")
                                                </th>
                                                <th scope="col" class="hidden-xs hidden-sm">
                                                    @Html.DisplayName("RNC")
                                                </th>
                                                <th scope="col">
                                                    @Html.DisplayName("Nombre Empresa")
                                                </th>


                                                <th class="hidden-xs hidden-sm">
                                                    @Html.DisplayNameFor(model => model.WEB)
                                                </th>
                                                <th class="hidden-xs hidden-sm">
                                                    @Html.DisplayName("Telefono Primario")
                                                </th>



                                                <th scope="col">#</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model)
                                            {


                                                <tr>

                                                    <td scope="row" class="hidden-xs hidden-sm">
                                                        <div class="user-panel">
                                                            <div class="pull-left image">
                                                                <img src="@Html.DisplayFor(modelItem => item.LOGO_EMP)" width="100px" height="60px" class="img-circle" alt="User Image">
                                                            </div>
                                                        </div>
                                                    </td>

                                                    <td scope="row">
                                                        @Html.ActionLink(@Html.DisplayFor(modelItem => item.CODIGO_EMP).ToString(), "Details", new { id = item.CODIGO_EMP }, htmlAttributes: new { })

                                                    </td>
                                                    <td scope="row" class="hidden-xs hidden-sm">
                                                        @Html.DisplayFor(modelItem => item.RNC_EMP)
                                                    </td>
                                                    <td scope="row">
                                                        @Html.DisplayFor(modelItem => item.NOMBRE_EMP)
                                                    </td>




                                                    <td scope="row" class="hidden-xs hidden-sm">
                                                        @Html.DisplayFor(modelItem => item.WEB)
                                                    </td>
                                                    <td scope="row" class="hidden-xs hidden-sm">
                                                        @Html.DisplayFor(modelItem => item.TELEFONO1)
                                                    </td>


                                                    <td scope="row">
                                                        <div class="btn-group">


                                                            <a href="@Url.Action("Edit","SC_EMP001")/@item.CODIGO_EMP" id="@item.CODIGO_EMP" class="btn btn-primary"><i class="fa fa-edit"></i> Editar</a>
                                                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@item.CODIGO_EMP"><i class="fa fa-trash"></i> Anular</button>
                                                            <a href="@Url.Action("ImprimirCliente","SC_EMP001")/@item.CODIGO_EMP" id="@item.CODIGO_EMP" class="btn btn-default"><i class="fa fa-print"></i> Impr.</a>

                                                        </div>
                                                    </td>
                                                </tr>

                                                <div class="modal fade" id="@item.CODIGO_EMP" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel">Eliminar Empresa</h5>
                                                                <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Desea eliminar esta Empresa: <strong>@item.RNC_EMP- @item.NOMBRE_EMP</strong>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal">Close</button>
                                                                @Html.ActionLink("Anular", "Delete", new { id = item.CODIGO_EMP }, htmlAttributes: new { @class = "btn btn-danger btn-block" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>


                                                <th>
                                                </th>
                                                <th scope="row">
                                                </th>
                                                <th>
                                                </th>
                                                <th>
                                                </th>
                                                <th>
                                                </th>
                                                <th>
                                                </th>
                                                <th>
                                                </th>



                                            </tr>
                                        </tfoot>
                                    </table>


                                </div>

                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
        </div>
    </div>
    


</section>

