@model DataLayer.Models.SC_PAIS001

@{
    ViewBag.Title = "Edit";
}
<div class="container-fluid">
    <br />
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Editar País</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="container-fluid">
            <br />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.CODIGO_PAIS)
                @Html.HiddenFor(model => model.FECHA_ADICION)
                @Html.HiddenFor(model => model.USUARIO_ADICCION)
                @Html.HiddenFor(model => model.IP_ADICCION)

                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#pais" data-toggle="tab">Datos de los Países</a></li>

                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="Region">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">

                                <div class="col-md-4">

                                    @Html.LabelFor(model => model.NOMBRE_PAIS, htmlAttributes: new { @class = "control-label col-md-2" })

                                    @Html.EditorFor(model => model.NOMBRE_PAIS, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NOMBRE_PAIS, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-4">

                                    @Html.LabelFor(model => model.COD_ISO_2, htmlAttributes: new { @class = "control-label col-md-2" })

                                    @Html.EditorFor(model => model.COD_ISO_2, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.COD_ISO_2, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">

                                    @Html.LabelFor(model => model.COD_ISO_3, htmlAttributes: new { @class = "control-label col-md-2" })

                                    @Html.EditorFor(model => model.COD_ISO_3, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.COD_ISO_3, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">

                                    @Html.LabelFor(model => model.COD_ISO_NUMERICO, htmlAttributes: new { @class = "control-label col-md-2" })

                                    @Html.EditorFor(model => model.COD_ISO_NUMERICO, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.COD_ISO_NUMERICO, "", new { @class = "text-danger" })
                                </div>




                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="box-footer">
                                @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                                <button type="submit" class="btn btn-success pull-right">Guardar</button>
                            </div>
                        </div>
                    </div>

                     
                    </div>
               
            }

        </div>
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
