@model DataLayer.Models.Envase

@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <br />



    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Crear Envase para Productos</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <label for="Nombre" class="col-sm-2 control-label">Descripcion</label>

                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                @Html.ActionLink("Regresar", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-info pull-right">Guradar</button>
            </div>
        }
        <!-- /.box-footer -->

    </div>




    <div>

    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
